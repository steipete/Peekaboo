{
  "name": "@peekaboo/poltergeist",
  "version": "2.0.0",
  "description": "The ghost that keeps your Swift projects fresh - a universal file watcher with auto-rebuild",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "poltergeist": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fb-watchman": "^2.0.2",
    "node-notifier": "^10.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fb-watchman": "^2.0.4",
    "@types/node": "^20.11.0",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}